{
  "name": "penko-reader",
  "private": true,
  "main": "electron/main.js",
  "repository": "github:NA-Ag/penko-reader",
  "description": "An accessibility-focused offline reading tool.",
  "author": "Penko Software <support@penkosoftware.org>",
  "version": "2.0.10",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate-icons": "node generate-icons.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "pdfjs-dist": "4.0.379",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "~5.8.2",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.17.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "org.penkosoftware.reader",
    "productName": "Penko Reader",
    "icon": "public/pwa-512x512.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
