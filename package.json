{
  "name": "penko-reader",
  "private": true,
  "main": "main.js",
  "repository": "github:NA-Ag/penko-reader",
  "description": "An accessibility-focused offline reading tool.",
  "author": "Penko Software <support@penkosoftware.org>",
  "version": "2.0.5",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build --base ./ && electron-builder",
    "electron:publish": "vite build --base ./ && electron-builder --publish always"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "pdfjs-dist": "4.0.379",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "~5.8.2",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.17.4"
  },
  "build": {
    "appId": "org.penkosoftware.reader",
    "productName": "Penko Reader",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Education"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
